{
	"$schema": "https://railway.app/railway.schema.json",
	"build": {
		"builder": "NIXPACKS",
		"buildCommand": "cd services/api && bun install && bun run build"
	},
	"deploy": {
		"startCommand": "cd services/api && bun run start",
		"restartPolicyType": "ON_FAILURE",
		"restartPolicyMaxRetries": 10
	}
}
