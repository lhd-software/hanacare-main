{
	"extends": "@react-native/typescript-config/tsconfig.json",
	"compilerOptions": {
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-native"
	},
	"include": ["src/**/*", "App.tsx", "index.js"],
	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js"
	]
}
